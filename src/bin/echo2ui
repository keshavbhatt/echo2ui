#! /bin/bash

bordered_title() {
  title="| $1 |"
  # shellcheck disable=SC2001
  edge=$(echo "$title" | sed 's/./-/g')
  echo "$edge"
  echo "$title"
  echo "$edge"
}

# concat $2 $1 times and print
repeated_char() {
  printf "%$1s" | tr " " "$2"
}


# check if arg is num
is_num()
 {
   re='^[0-9]+$'
   if ! [[ $1 =~ $re ]] ;
   then
       echo -e "\nError: provided argument $1 is not a valid integer \n" 
       display_usage
       exit 1
   fi
 }

display_usage()
 { 
   bordered_title "echo2ui by keshavnrj@gmail.com"
   echo -e "\necho2ui shows informational messages using xterm and whiptail\n" 
   echo -e "\nUsage: $0 [context name] [title] [message] [width] [height]\n" 
   echo -e "Example: $0 'My Context' 'My Title' 'Hello from echo2ui!' 60 20\n"
 }
 
# check whether user had supplied -h or --help . If yes display usage 
 if [[ ( $* == "--help") ||  $* == "-h" ]] 
 then 
   display_usage
   exit 0
 fi 
 
# if less than 5 arguments supplied, display usage 
 if [[ $* != "--help" || $* != "-h" ]] && [ $# -le 4 ]; 
 then 
   echo -e "\nError: insufficient arguments passed \n" 
   display_usage
   exit 1
 else
   argc=$#
   argv=("$@")

  for (( k=3; k<argc; k++ )); do
    is_num "${argv[k]}"
  done
 fi 
 

# bootstap
 : ${PROG=xterm}
 : ${AGENT=whiptail}

 export NEWT_COLORS='
   root=,black
 '

 TERM='xterm-256color'
 #HEIGHT=$(expr $5 - 5)
 CONTEXT=$1


 $PROG -fa -misc-fixed-medium-r-normal--20-200-75-75-c-100-iso8859-1 -fs 12 -title "${CONTEXT}" -geometry ${4}x${5}+0+0 -e bash -c "$AGENT --title '${CONTEXT^^}: ${2}' --msgbox '${3}' '${5}' '${4}'"
